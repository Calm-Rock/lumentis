{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "master",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "error",
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "attributePosition": "multiline",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "always",
      "quoteStyle": "double",
      "attributePosition": "multiline"
    }
  }
}
